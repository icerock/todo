<h1>New comment</h1>

<%= error_messages_for :comment %>
<% form_for @comment do |f| -%>
  <p>
    <%=  f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :comment_text %><br />
    <%= f.text_area :comment_text %>
  </p>

  <p><%= submit_tag 'Create' %></p>
<% end %>
