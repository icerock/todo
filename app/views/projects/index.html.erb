<h1>Listing Projects</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Active</th>
    <th>Billable</th>
    <th>Bill by</th>
    <th>Hourly rate</th>
    <th>Code</th>
    <th>Notes</th>
    <th>Budget by</th>
    <th>Budget</th>
    <th>Fees</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%=h project.name %></td>
    <td><%=h project.active %></td>
    <td><%=h project.billable %></td>
    <td><%=h project.bill_by %></td>
    <td><%=h project.hourly_rate %></td>
    <td><%=h project.code %></td>
    <td><%=h project.notes %></td>
    <td><%=h project.budget_by %></td>
    <td><%=h project.budget %></td>
    <td><%=h project.fees %></td>
    <td><%= link_to 'Show',:controller => 'projects', :action => 'show', :id => project %></td>
    <td><%= link_to 'Edit', :controller => 'projects', :action => 'edit', :id => project  %></td>
    <td><%= link_to 'Destroy',  {:controller => 'projects', :action => 'destroy',:id => project}, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

