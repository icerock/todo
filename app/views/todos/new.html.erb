<h1>New task</h1>

<% form_for(@task) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :task_name %><br />
    <%= f.text_field :task_name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :billable %><br />
    <%= f.check_box :billable %>
  </p>
  <p>
    <%= f.label :task %>
    <%= f.collection_select :task_ids, Task.find(:all, :order => 'task_name'), :id, :task_name, {}, :multiple => false %>
  </p>
  <p>
    <%= f.label :user %>
    <%= f.collection_select :user_ids, User.find(:all, :order => 'login'), :id, :login, {}, :multiple => false %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
  
<% end %>

<%= link_to 'Back', tasks_path %>