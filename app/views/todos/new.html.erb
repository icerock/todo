<h3>Create a New TODO</h3>

<% form_for @todo do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :due_time %><br />
    <%= f.datetime_select :due_time %>
  </p>
  <p>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </p>
  <p>
    Project: <br />

    <%= f.collection_select :project_id, @projects, :id, :name%>
  </p>
  <p>
    Task: <br />

    <%= f.collection_select :task_id, @normal_tasks, :id, :name%>
  </p>

  <p>
    Assined to: <br />

    <%= f.collection_select :user_id, User.find(:all, :order => 'login'), :id, :login, {} %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>

<% end %>

<%= link_to 'Back', todos_url %>